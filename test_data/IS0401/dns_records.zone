qry-api-timeout._nmos-query._tcp	TXT	"api_ver={{ api_ver }}" "api_proto={{ api_proto }}" "pri=40"
qry-api-5006._nmos-query._tcp	SRV	0 0 5005 mocks.testsuite.nmos.tv.
